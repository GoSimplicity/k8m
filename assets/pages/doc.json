{
  "type": "page",
  "body": [
    {
      "type": "grid",
      "columns": [
        {
          "md": 4,
          "body": [
            {
              "type": "input-tree",
              "name": "tree",
              "initiallyOpen": false,
              "unfoldedLevel": 1,
              "searchable": true,
              "showOutline": true,
              "showIcon": false,
              "searchConfig": {
                "sticky": true
              },
              "selectFirst": true,
              "heightAuto": true,
              "inputClassName": "no-border no-padder mt-1",
              "source": "get:/k8s/doc/${kind}",
              "onEvent": {
                "change": {
                  "actions": [
                    {
                      "componentId": "detail",
                      "actionType": "reload",
                      "data": {
                        "description": "${event.data.item.description}"
                      }
                    }
                  ]
                }
              }
            }
          ]
        },
        {
          "md": 8,
          "body": [
            {
              "type": "service",
              "api": "post:/k8s/doc/detail",
              "body": [
                {
                  "type": "tpl",
                  "tpl": "${description}</br></br></br>${translate?translate:''}",
                  "wrapperComponent": "",
                  "inline": false
                }
              ],
              "id": "detail"
            }
          ]
        }
      ]
    }
  ]
}

