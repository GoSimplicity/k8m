{
  "type": "page",
  "body": [
    {
      "type": "form",
      "title": "填写Yaml",
      "wrapWithPanel": false,
      "body": [
        {
          "type": "button-toolbar",
          "buttons": [
            {
              "type": "button",
              "label": "导入yaml文件",
              "actionType": "dialog",
              "dialog": {
                "closeOnEsc": true,
                "closeOnOutside": true,
                "title": "上传文件 (ESC 关闭)",
                "body": [
                  {
                    "type": "page",
                    "body": {
                      "type": "form",
                      "body": [
                        {
                          "type": "input-file",
                          "name": "file",
                          "accept": "*",
                          "asBlob": true,
                          "drag": true
                        },
                        {
                          "type": "input-text",
                          "name": "fileName",
                          "label": "文件名",
                          "value": "${file.name ||file[0].name ||file[0].path ||file.path ||''}"
                        }
                      ],
                      "actions": [
                        {
                          "type": "button",
                          "label": "上传",
                          "level": "primary",
                          "actionType": "ajax",
                          "close": true,
                          "api": {
                            "method": "post",
                            "url": "/k8s/yaml/upload",
                            "data": {
                              "file": "${file}",
                              "fileName": "${fileName}"
                            }
                          }
                        }
                      ]
                    }
                  }
                ],
                "actions": []
              }
            },
            {
              "type": "button",
              "label": "Apply",
              "level": "primary",
              "actionType": "ajax",
              "api": "post:/k8s/yaml/apply",
              "validate": true,
              "onSuccess": [
                {
                  "actionType": "setValue",
                  "args": {
                    "result": "${msg}"
                  }
                }
              ]
            },
            {
              "type": "button",
              "label": "Delete",
              "level": "danger",
              "actionType": "ajax",
              "api": "post:/k8s/yaml/delete",
              "validate": true,
              "onSuccess": [
                {
                  "actionType": "setValue",
                  "args": {
                    "result": "${msg}"
                  }
                }
              ]
            }
          ]
        },
        {
          "type": "editor",
          "name": "yaml",
          "size": "xxl",
          "allowFullscreen": true,
          "language": "yaml",
          "value": "${yaml}",
          "options": {
            "wordWrap": "on",
            "scrollbar": {
              "vertical": "auto"
            }
          }
        },
        {
          "type": "tpl",
          "tpl": "${result|join:<br>}"
        }
      ]
    }
  ]
}