{
  "type": "page",
  "body": [
    {
      "type": "container",
      "className": "floating-toolbar-right",
      "body": [
        {
          "type": "wrapper",
          "style": {
            "display": "inline-flex"
          },
          "body": [
            {
              "type": "form",
              "mode": "horizontal",
              "style": {
                "display": "inline-flex"
              },
              "wrapWithPanel": false,
              "body": [
                {
                  "style": {
                    "width": 400,
                    "margin": 5
                  },
                  "label": "切换集群",
                  "type": "select",
                  "multiple": false,
                  "name": "cluster",
                  "id": "cluster",
                  "searchable": true,
                  "source": "/k8s/cluster/option_list",
                  "value": "${cookie:selectedCluster|url_decode}",
                  "onEvent": {
                    "change": {
                      "actions": [
                        {
                          "actionType": "ajax",
                          "api": "post:/k8s/cluster/setDefault/full_name/${event.data.value|url_encode}"
                        },
                        {
                          "actionType": "custom",
                          "script": "window.location.reload();"
                        }
                      ]
                    }
                  }
                }
              ]
            }
          ]
        },
        {
          "type": "button",
          "icon": "fas fa-cog",
          "tooltip": "管理集群",
          "actionType": "url",
          "size": "xs",
          "url": "/index.html#/cluster/all",
          "blank": false
        }
      ]
    },
    {
      "type": "form",
      "title": "填写Yaml",
      "wrapWithPanel": false,
      "body": [
        {
          "type": "button-toolbar",
          "buttons": [
            {
              "type": "button",
              "label": "应用到集群",
              "icon": "fas fa-play text-success",
              "actionType": "ajax",
              "tooltip": "kubectl apply",
              "confirmText": "确定要执行?",
              "api": "post:/k8s/yaml/apply",
              "validate": true,
              "onSuccess": [
                {
                  "actionType": "setValue",
                  "args": {
                    "result": "${msg}"
                  }
                }
              ]
            },
            {
              "type": "button",
              "label": "清空编辑器",
              "icon": "fas fa-eraser text-success",
              "onEvent": {
                "click": {
                  "actions": [
                    {
                      "actionType": "custom",
                      "script": "localStorage.setItem('yaml','');"
                    },
                    {
                      "type": "action",
                      "actionType": "setValue",
                      "componentId": "yaml",
                      "args": {
                        "value": ""
                      }
                    }
                  ]
                }
              }
            },
            {
              "type": "button",
              "label": "导入yaml文件",
              "icon": "fas fa-file-code text-success",
              "actionType": "dialog",
              "dialog": {
                "closeOnEsc": true,
                "closeOnOutside": true,
                "title": "上传文件 (ESC 关闭)",
                "body": [
                  {
                    "type": "page",
                    "body": {
                      "type": "form",
                      "body": [
                        {
                          "type": "input-file",
                          "name": "file",
                          "accept": "*",
                          "asBlob": true,
                          "drag": true
                        },
                        {
                          "type": "hidden",
                          "name": "fileName",
                          "label": "文件名",
                          "value": "${file.name ||file[0].name ||file[0].path ||file.path ||''}"
                        }
                      ],
                      "actions": [
                        {
                          "type": "button",
                          "label": "导入编辑器",
                          "level": "primary",
                          "close": true,
                          "onEvent": {
                            "click": {
                              "actions": [
                                {
                                  "actionType": "custom",
                                  "script": "var fileInput = document.querySelector('input[type=file]').files[0];\nif (fileInput) {\n  var reader = new FileReader();\n  reader.onload = function(e) {\n    var content = e.target.result;\n   localStorage.setItem('yaml',   content);\n  };\n  reader.readAsText(fileInput);\n}"
                                },
                                {
                                  "actionType": "wait",
                                  "args": {
                                    "time": 1000
                                  }
                                },
                                {
                                  "type": "action",
                                  "actionType": "setValue",
                                  "componentId": "yaml",
                                  "args": {
                                    "value": "${ls:yaml}"
                                  }
                                }
                              ]
                            }
                          }
                        },
                        {
                          "type": "button",
                          "label": "直接执行",
                          "level": "danger",
                          "actionType": "ajax",
                          "confirmText": "确定要执行?",
                          "close": true,
                          "api": {
                            "method": "post",
                            "url": "/k8s/yaml/upload",
                            "data": {
                              "file": "${file}",
                              "fileName": "${fileName}"
                            }
                          }
                        }
                      ]
                    }
                  }
                ],
                "actions": []
              }
            },
            {
              "type": "button",
              "label": "从集群删除",
              "icon": "fas fa-trash text-danger",
              "tooltip": "kubectl delete",
              "confirmText": "确定要删除?",
              "actionType": "ajax",
              "api": "post:/k8s/yaml/delete",
              "validate": true,
              "onSuccess": [
                {
                  "actionType": "setValue",
                  "args": {
                    "result": "${msg}"
                  }
                }
              ]
            }
          ]
        },
        {
          "type": "editor",
          "name": "yaml",
          "id": "yaml",
          "size": "xxl",
          "allowFullscreen": true,
          "language": "yaml",
          "value": "${yaml}",
          "options": {
            "wordWrap": "on",
            "scrollbar": {
              "vertical": "auto"
            }
          }
        },
        {
          "type": "tpl",
          "tpl": "${result|join:<br>}"
        }
      ]
    }
  ]
}